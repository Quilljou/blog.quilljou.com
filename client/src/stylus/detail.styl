.page-detail
  background: #F7F7F2
  padding: 80px 0
  min-height: 100vh

  .back-arrow
    position: fixed
    top 30px
    left 50px
    font-size: 30px
    cursor pointer
    color: #ddd
    transition: all .45s cubic-bezier(.215,.61,.355,1)
    z-index: 101


    &:hover
      color: #999
      transform: translate3d(-5px,0,0)
    // width 20px
    // height 2px
    // background #000


  .article-wrap
    width 600px
    margin: 0 auto
    background: #fff
    box-shadow: -1px -1px 4px rgba(#ddd,0.5),1px 1px 4px rgba(#ddd,0.5)

  .banner
    position: relative

    &-overlay
      position: absolute
      left 0
      right 0
      top 0
      bottom 0
      background rgba(#000,0.05)

    img
      width 100%

    p
      font-size 40px
      color: #fff
      z-index: 5



  .padding
    padding: 40px 60px

  .back
    width 100%
    padding 10px 20px
    margin-top: 80px
    text-align: right
    font-size: 20px
    letter-spacing: 2px
    color: #aaa
    border: 1px solid #ddd

    a
      transition: all 0.2s linear
      cursor pointer
      &:hover
        color: #111
