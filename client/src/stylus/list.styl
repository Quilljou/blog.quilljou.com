.page-list
  padding: 80px 0
  .header
    margin-bottom: 100px
    text-align: center

  .avatar
    width: 100px
    height 100px
    border-radius: 50%
    margin: 0 auto
    box-shadow 0 1px 1px #777
    outline: none
    overflow: hidden
    img
      width 100%
      height 100%

  .name
    color #666
    line-height 28px
    font-size 20px
    letter-spacing: 0.01em
    padding: 25px 0
    position: relative

    &:after
      content ''
      position absolute
      width 225px
      height 1px
      background #ddd
      bottom: 0
      left: 50%
      margin-left: -112px

  .list
    width 600px
    margin: 0 auto
    overflow: auto

  .list-item
    width: 230px
    margin: 0 35px 70px 35px
    float: left
    box-shadow: 0 10px 16px rgba(0,0,0,0.1)
    border-radius: 2px
    overflow: hidden
    cursor: pointer
    transition: transform .45s cubic-bezier(.215,.61,.355,1),box-shadow .45s cubic-bezier(.215,.61,.355,1)


    &:hover
      transform: translate3d(0,-5px,0)
      box-shadow: 0 12px 18px rgba(0,0,0,.15)

    &>a
      display block

    img
      width: 100%
      max-height: 220px


    .text
      padding: 15px

    .title
      font-size: 19px
      margin-bottom: 10px
      color: #666

    .date
      font-size: 16px
      color: #bbb
      letter-spacing: 2px

  .btn-wrap
    text-align: center

    button
      padding: 16px 40px
      background: transparent
      letter-spacing: 0.1em
      border-radius: 30px
      font-size: 18px
      color: #666
      border: 1px solid #979797
      cursor: pointer
      transition: all 0.35s ease

      &:hover
        // background: #979797
        // color: #fff
        color: #000
        transform: translate3d(0,-5px,0)
        box-shadow: 0 5px 18px rgba(0,0,0,.15)
    button[disabled]
      color: #ccc
      border-color: currentColor
      cursor not-allowed
      &:hover
        box-shadow: none

  .no-more
    text-align: center
    color: #ccc

    span
      position: relative
      font-size 18px

      &:after,
      &:before
        position: absolute
        content: ''
        bottom 0.5em
        width 50px
        height 1px
        background: #ddd
        left: 0

      &:before
        transform translate3d(-110%,0,0)

      &:after
        right: 0
        left: auto
        transform translate3d(110%,0,0)
